<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".izinBuat">

    <ScrollView
        android:layout_width="340dp"
        android:layout_height="647dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/vw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="Bebas Neue"
                android:paddingBottom="80dp"
                android:text="LOGIN MAHASISWA"
                android:textAlignment="center"
                android:textColor="#707070"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAMA"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/us2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/txtbox"
                android:fontFamily="GeosansLight"
                android:hint="masukan nama"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NIM"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/us3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/txtbox"
                android:fontFamily="GeosansLight"
                android:hint="masukan nim"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KELAS"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/us4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/txtbox"
                android:fontFamily="GeosansLight"
                android:hint="masukan kelas"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MATA KULIAH"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/us5"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/txtbox"
                android:fontFamily="GeosansLight"
                android:hint="masukan mata kuliah"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JENIS IZIN"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ALASAN"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/us7"
                android:layout_width="353dp"
                android:layout_height="436dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/txtbox"
                android:fontFamily="GeosansLight"
                android:hint="masukan alasan"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/chkSetuju"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apakah anda setuju untuk mengajukan Izin tersebut?" />

            <Button
                android:id="@+id/confirmIzin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/buttonradius"
                android:text="SUBMIT"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>